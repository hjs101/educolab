<Survey_Word_Screen>:
	FloatLayout:
		size: root.width, root.height
		canvas.before:
			Color:
				rgba:(194/255,209/255,217/255,1)
			RoundedRectangle:
				size: root.width*0.7, 10
				pos: root.width*0.12, 47
				radius:[5]	
			Color:
				rgba:(66/255,75/255,90/255,1)
			RoundedRectangle:
				size: root.width*0.7*root.percent, 10
				pos: root.width*0.12, 47
				radius:[5]	
		Label:
			id:progress
			font_size: 25
			text_size: self.size
			size_hint: None, None
			halign:'center'
			valign:'middle'
			height:40
			width:120
			color:0/255,176/255,240/255,1
			pos_hint: {"x":0.83,"top":0.1}
			#test for Design
			canvas.before:
				Color:
					rgba: (1,1,1,1)
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius:[40]					
				Color:
					rgba: (0/255,176/255,240/255,1)
				Line:
					width:2
					rounded_rectangle: self.x, self.y, self.width, self.height, 20
		Button:
			text:"목록으로"
			bold:True
			font_size: 30
			halign:'center'
			color: 1,1,1,1

			on_release:
				root.onPopUp()
				root.checkPopup()
			# 	app.root.current=
			# 	root.manager.transition.direction="down"

			size_hint: None, None
			height: 50
			width : 200

			pos_hint: {"right":0.95,"top":0.94}
			# width:150
			background_normal:''
			background_color: (0,0,0,0)
			canvas.before:
				Color:
					rgba :(54/255,54/255,54/255,1)
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius:[10]	

		Label:
			text:"오늘 저녁 메뉴 선정"
			bold:True
			font_size: 40
			text_size:self.size
			halign:'left'
			valign:'center'
			color: 95/255,107/255,117/255,1
			size_hint: .7, None
			height: 50
			pos_hint: {"x":0.05,"top":0.94}

		Button:
			size_hint: None, None
			height:60
			width:60
			background_color:0,0,0,0

			pos_hint: {"right":0.95,"top":0.5}
			# on_release:
			# 	root.next_flag_setup("after")
