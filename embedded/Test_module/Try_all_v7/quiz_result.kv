<Quiz_Result_Screen>:
	FloatLayout:
		size: root.width, root.height
		Button: # exit
			on_release:root.manager.onStop()
			pos_hint: {"right":0.98,"top":0.98}
			text:"x"
			bold: True
			color: 1,1,1,1
			size_hint: None, None
			halign:'center'
			valign:'bottom'
			size : 30,30
			background_normal:''
			background_color:0,0,0,0
			canvas.before:
				Color:
					rgba: (1,0,0,1)
				RoundedRectangle:
					size: self.size
					pos : self.pos
					radius:[10]
				Color:
					rgba: 155/255,17/255,30/255,1
				Line:
					width:1
					rounded_rectangle: self.x, self.y, self.width, self.height, 10

		Button: # Home
			on_release:
				app.root.current="main"
				root.manager.transition.direction='down'
			pos_hint: {"right":0.95,"top":0.98}
			text:"Home"
			font_size: 20
			bold: True
			color: 1,1,1,1
			size_hint: None, None
			halign:'center'
			valign:'bottom'
			size : 100,30
			background_normal:''
			background_color:0,0,0,0
			canvas.before:
				Color:
					rgba: 66/255,75/255,90/255,1
				RoundedRectangle:
					size: self.size
					pos : self.pos
					radius:[10]
				Color:
					rgba: 0,0,0,1
				Line:
					width:1
					rounded_rectangle: self.x, self.y, self.width, self.height, 10

		BoxLayout:
			orientation: "vertical"
			size_hint : None, None
			size : 960, 500
			pos_hint : {"center_x":0.5, "center_y":0.5}
			padding: 40
			spacing: 40
			halign:'center'


			Label: # title
                id:title
				size_hint_y: None
				height:70
				color: 94/255,106/255,117/255,1
				font_size: 60
				bold: True
				halign:'center'
				valign:'middle'

				# #test for Design
				# background_normal:''
				# background_color:0,0,0,0
				# canvas.before:
				# 	Color:
				# 		rgba:0,1,0,1
				# 	Rectangle: 
				# 		size: self.size
				# 		pos : self.pos

			ScrollView:
				size_hint: .25, 1
				pos_hint:{"center_x":0.5,"top":1}
				bar_inactive_color: 0,0,0,0.5

				bar_color: root.key_color
				bar_width:20
				scroll_type:['bars','content']

				GridLayout:
					size_hint: 1, None
					height: self.minimum_height
					cols:1
					pos_hint:{"center_x":1,"top":1}
					padding:10
					#test for Design
					# background_normal:''
					# background_color:0,0,0,0
					# canvas.before:
					# 	Color:
					# 		rgba:1,1,1,1
					# 	Rectangle: 
					# 		size: self.size
					# 		pos: self.pos

					Label:
						id:content
						# pos_hint:{"center_x":0.5,"top":1}
						size_hint: 1, None
						bold: True
						text_size:self.width-45,None
						font_size:40
						height: self.texture_size[1]
						halign:"center"
						valign:"top"
