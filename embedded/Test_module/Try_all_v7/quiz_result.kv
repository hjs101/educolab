						color:0,0,0,1

					
			Button: # email-btn
				text:"메인 화면으로"
				bold:True
				font_size: 30
				halign:'center'
				color: 1,1,1,1
				on_release:
					root.go_next()
				size_hint: None,None
				width:300
				height:50
				pos_hint: {'center_x':.5,'center_y':.5}

				background_normal:''
				background_color: (0,0,0,0)
				canvas.before:
