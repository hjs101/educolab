							width:2
							rounded_rectangle: self.x+(self.width/2)-7, self.y+(self.height/2)-7, 14, 14, 7 

				Button:
					id:ex2
					# text: "함박 스테이크"
					text_size: self.size
					font_size:25
					halign:'left'
					valign:'middle'
					color: 95/255,107/255,117/255,1
					size_hint_x:None
					width:self.parent.width*0.95-10
					background_normal:''
					background_color:0,0,0,0
					on_release: root.toggle_btn('ans2')


				CheckBox:
					id:ans3
