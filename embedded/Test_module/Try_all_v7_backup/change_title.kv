<Temp_checkbox>:
	group:"ans"
	pos_hint:{"center_y":0.5}
	# pos_hint:{"center_x":0.5,"top":1}
	size_hint: None, None
	# ans_num:0
	height:45
	width:45
	background_normal:''
	backgournd_color:0,0,0,0
	on_active: app.root.get_screen("Change_title").checkbox_click(self, self.active, self.ans_num)

	#test for Design
	canvas.before:
		# Color:
		# 	rgba:1,1,1,1
		# Rectangle: 
		# 	size: self.width+self.parent.width-85, self.height+10
		# 	pos: self.x, self.y-5
		Color:
			rgba:1,1,1,1
		RoundedRectangle: 
			size: 26, 26
			pos: self.x+(self.width/2)-13, self.y+(self.height/2)-13
			radius:[13]
		Color:
			rgba: 145/255,157/255,167/255,1
		Line:
			width:2
			rounded_rectangle: self.x+(self.width/2)-7, self.y+(self.height/2)-7, 14, 14, 7

<Temp_button>:
	size_hint: 1, None
	bold: True
	text_size:self.width-45,None
	font_size:40
	height: self.texture_size[1]
	halign:"left"
	valign:"top"
	color:0,0,0,1
	on_release:app.root.get_screen("Change_title").toggle_btn(self.ans_num)
	
	background_normal:''
	background_down:''
	backgournd_color:0,0,0,0

	#test for Design
	canvas.before:
		Color:
			rgba:1,1,1,1
		Rectangle: 
			size: self.width, self.height+10
			pos: self.x, self.y-5
