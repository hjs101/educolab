			ScrollView:
				size_hint: 1, 1
				pos_hint:{"center_x":0.5,"top":1}
				bar_inactive_color: 0,0,0,0.5

				bar_color: root.key_color
				bar_width:20
				scroll_type:['bars','content']

				GridLayout:
