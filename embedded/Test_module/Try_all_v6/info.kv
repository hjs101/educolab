<Info_Screen>:
	FloatLayout:
		size: root.width, root.height
		Button:
			on_release:
				root.manager.onStop()
				# root.onStop()
			pos_hint: {"right":0.98,"top":0.98}
			text:"x"
			bold: True
			color: 1,1,1,1
			size_hint: None, None
			halign:'center'
			valign:'bottom'
			size : 30,30
			# background_normal:''
			background_color:0,0,0,0
			canvas.before:
				Color:
					rgba: 1,0,0,1
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius:[10]
				Color:
					rgba: 155/255,17/255,30/255,1
				Line:
					width:1
					rounded_rectangle: self.x, self.y, self.width, self.height, 10

		Button: # Home
			on_release:
				app.root.current="main"
				root.manager.transition.direction='down'
			pos_hint: {"right":0.95,"top":0.98}
			text:"Main"
			font_size: 20
			bold: True
			color: 1,1,1,1
			size_hint: None, None
			halign:'center'
			valign:'bottom'
			size : 100,30
			background_normal:''
			background_color:0,0,0,0
			canvas.before:
				Color:
					rgba: 66/255,75/255,90/255,1
				RoundedRectangle:
					size: self.size
					pos : self.pos
					radius:[10]
				Color:
					rgba: 0,0,0,1
				Line:
					width:1
					rounded_rectangle: self.x, self.y, self.width, self.height, 10


		BoxLayout:
			orientation: "vertical"
			size_hint : None, None
			size : 1120, 660
			pos_hint : {"center_x":0.5, "center_y":0.5}
			padding: 40
			spacing: 30
			halign:'center'

			BoxLayout:
				orientation:'vertical'
				#test for Design
				background_normal:''
				background_color:0,0,0,0
				padding: 20
				spacing: 20
				canvas.before:
					Color:
						rgba:1,1,1,1
					Rectangle: 
						size: self.size
						pos: self.pos
					Color:
						rgba: 0,0,0,1
					Line:
						width:1.1
						rectangle: self.x, self.y, self.width, self.height
					Color:
						rgba: root.key_color
					Line:
						width:3
						points: self.x+20, self.y+self.height-113, self.x+self.width-20, self.y+self.height-113
				
				BoxLayout:
					orientation:'vertical'
					size_hint: 0.96, .25

					pos_hint:{"center_x":0.5, "center_y":0.5}
					# spacing:
					# padding_x:30
					Label:
						id:title
						# text: "시험범위(국어)"
						font_size: 40
						bold: True
						text_size: self.size
						halign:'left'
						valign:'middle'
						color: 82/255,95/255,106/255,1
						background_normal:''
						background_color:0,0,0,0
						# #test for Design
						# background_normal:''
						# background_color:0,0,0,0
						# canvas.before:
						# 	Color:
						# 		rgba:0,1,0,1
						# 	Rectangle: 
						# 		size: self.size
						# 		pos : self.pos
					Label:
						id:info
						# text:"작성자 OOO | 작성날짜 2022.08.05. | 조회수 OOO"
						font_size: 20
						bold: True
						text_size: self.size
						halign:'left'
						valign:'middle'
						color: 0,0,0,1
						size_hint: 1, 0.7
						background_normal:''
						background_color:0,0,0,0
						# #test for Design

						# canvas.before:
						# 	Color:
						# 		rgba:0,1,1,1
						# 	Rectangle: 
						# 		size: self.size
						# 		pos : self.pos

				ScrollView:
					size:self.width, 1
					bar_inactive_color: 0,0,0,0.5

					bar_color: root.key_color
					bar_width:20
					scroll_type:['bars','content']

					GridLayout:
						size_hint: 1, None
						height: self.minimum_height
						cols:1
						pos_hint:{"left":1,"top":1}
						# ##### test for Design
						# background_normal:''
						# background_color:0,0,0,0
						# canvas.before:
						# 	Color:
						# 		rgba:1,1,0,1
