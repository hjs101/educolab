<Find_result>:
	FloatLayout:
		size: root.width, root.height
		Button: # exit
			on_release:root.manager.onStop()
			pos_hint: {"right":0.98,"top":0.98}
			text:"x"
			bold: True
			color: 1,1,1,1
			size_hint: None, None
			halign:'center'
			valign:'bottom'
			size : 30,30
			background_normal:''
			background_color:0,0,0,0
			canvas.before:
				Color:
					rgba: (1,0,0,1)
				RoundedRectangle:
					size: self.size
					pos : self.pos
					radius:[10]
				Color:
					rgba: 155/255,17/255,30/255,1
				Line:
					width:1
					rounded_rectangle: self.x, self.y, self.width, self.height, 10

		Button: # Home
			on_release:
				app.root.current="login"
				root.manager.transition.direction=root.next_page_slide
			pos_hint: {"right":0.95,"top":0.98}
			text:"Home"
			font_size: 20
			bold: True
			color: 1,1,1,1
			size_hint: None, None
			halign:'center'
			valign:'bottom'
			size : 100,30
			background_normal:''
			background_color:0,0,0,0
			canvas.before:
				Color:
					rgba: 66/255,75/255,90/255,1
				RoundedRectangle:
					size: self.size
					pos : self.pos
					radius:[10]
				Color:
					rgba: 0,0,0,1
				Line:
					width:1
					rounded_rectangle: self.x, self.y, self.width, self.height, 10

		BoxLayout:
			orientation: "vertical"
			size_hint : None, None
			size : 960, 450
			pos_hint : {"center_x":0.5, "center_y":0.5}
			padding: 40
			spacing: 40
			halign:'center'


			Label: # title
                id:title
				size_hint_y: .8
				color: 94/255,106/255,117/255,1
				font_size : 90
				bold: True
				halign:'center'
				valign:'middle'

			BoxLayout:
				padding:10
				spacing:20
				orientation:"vertical"

				Label: # sub_title
                    id:sub_title
					pos_hint : {"center_x":0.5, "center_y":0.5}
					font_size: 40
					bold: True
					color: 0,0,0,1
					
			Button: # email-btn
				text:"로그인 화면으로"
				bold:True
				font_size: 30
				halign:'center'
				color: 1,1,1,1
				on_release:
					app.root.current='login'
					root.manager.transition.direction=root.next_page_slide
				size_hint_x : None
				size_hint_y : .4
				width:300
				pos_hint : {'center_x':.5,'center_y':.5}

				background_normal:''
				background_color: (0,0,0,0)
				canvas.before:
					Color:
						rgba :(66/255,75/255,90/255,1)
					RoundedRectangle:
						size: self.size
						pos : self.pos
						radius:[10]					


