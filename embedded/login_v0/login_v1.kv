Screen:
	FloatLayout:
		size: root.width, root.height

		Button:
			pos_hint: {"right":0.98,"top":0.98}
			text:"x"
			bold: True
			color: 1,1,1,1
			size_hint: None, None
			halign:'center'
			valign:'bottom'
			size : 30,30
			background_normal:''
			background_color:0,0,0,0
			canvas.before:
				Color:
					rgba: (1,0,0,1)
				RoundedRectangle:
					size: self.size
					pos : self.pos
					radius:[10]
				Color:
					rgba: 155/255,17/255,30/255,1
				Line:
					width:1
					rounded_rectangle: self.x, self.y, self.width, self.height, 10

		BoxLayout:
			orientation: "vertical"
			size_hint : None, None
			size : 600, 350
			#background_color : (1,1,1,1)
			pos_hint : {"center_x":0.5, "center_y":0.5}
			padding: 20
			spacing: 40
			halign:'center'


			BoxLayout:
				orientation:"horizontal"
				size_hint_y : None
				height: 100

				Label:
					text:"EduColab"
					color: 94/255,106/255,117/255,1
					font_size : 60
					bold: True
					#background_color : 1,0,0,1
					size_hint_x: None
					width:450
					halign:'right'
					valign:'middle'
					
				FloatLayout:
					AsyncImage:
						source:'logo.png'
						pos_hint:{'center_x':0,'center_y':.5}
			BoxLayout:
				orientation:"horizontal"
				size_hint_y : None
				height:150
				spacing : 50

				BoxLayout:
					orientation: "vertical"
					size_hint_x: None
					width:300
					spacing: 10

					BoxLayout:
						pos_hint : {"center_x":0.5, "center_y":0.5}
						Label:
							pos_hint : {"center_x":0, "center_y":0.5}
							text:"아이디"
							font_size: 20
							bold: True
							color: 94/255,106/255,117/255,1
							size_hint_x : None
							height:30

						TextInput:
							size_hint : None, None
							pos_hint : {"center_x":0, "center_y":0.5}
							height:30
							width:200
							background_normal:''
							background_color: (1,1,1,1)
							canvas.before:
								Color:
									rgba: 94/255,106/255,117/255,1
								Line:
									width:1
									rectangle: self.x, self.y, self.width, self.height


					BoxLayout:
						pos_hint : {"center_x":0.5, "center_y":0.5}
						Label:
							pos_hint : {"center_x":0, "center_y":0.5}
							text:"비밀번호"
							font_size: 20
							bold: True
							color: 94/255,106/255,117/255,1
							size_hint_x : None
							height:30

						TextInput:
							size_hint : None, None
							pos_hint : {"center_x":0, "center_y":0.5}
							height:30
							width:200
							background_normal:''
							background_color: (1,1,1,1)
							canvas.before:
								Color:
									rgba: 94/255,106/255,117/255,1
								Line:
									width:1
									rectangle: self.x, self.y, self.width, self.height

				Button:
					text:"Let's \nColab!"
					font_size: 30
					bold: True
					halign:'center'
					color: 94/255,106/255,117/255,1

					on_press:app.loginbtn()

					pos_hint : {"center_x":0.3, "center_y":0.5}
					size_hint : (.6, 1)
					background_normal:''
					background_color: (0,0,0,0)
					canvas.before:
						Color:
							rgba :(175/255,244/255,198/255,1)
						RoundedRectangle:
							size: self.size
							pos : self.pos
							radius:[40]					
						Color:
							rgba: 156/255,219/255,177/255,1
						Line:
							width:2
							rounded_rectangle: self.x, self.y, self.width, self.height, 40
					

			FloatLayout:
				orientation:"horizontal"
				size_hint_y :None
				height:50

				Button:
					text:"ID 찾기"
					font_size: 20
					halign:'center'
					color: 1,1,1,1

					on_press:app.forgetID()

					pos_hint : {"center_x":0.3, "center_y":0.5}
					size_hint : (None, .8)
					width:150
					background_normal:''
					background_color: (0,0,0,0)
					canvas.before:
						Color:
							rgba :(66/255,75/255,90/255,1)
						RoundedRectangle:
							size: self.size
							pos : self.pos
							radius:[20]					

				Button:
					text:"PW 찾기"
					font_size: 20
					halign:'center'
					color: 1,1,1,1

					on_press:app.forgetPW()

					pos_hint : {"center_x":0.7, "center_y":0.5}
					size_hint : (None, .8)
					width:150
					background_normal:''
					background_color: (0,0,0,0)
					canvas.before:
						Color:
							rgba :(66/255,75/255,90/255,1)
						RoundedRectangle:
							size: self.size
							pos : self.pos
							radius:[20]	


					

			
		
